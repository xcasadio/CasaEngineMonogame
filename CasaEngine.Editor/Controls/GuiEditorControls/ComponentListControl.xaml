<UserControl x:Class="CasaEngine.Editor.Controls.GuiEditorControls.ComponentListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CasaEngine.Editor.Controls.GuiEditorControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0"/>

        <ListBox Grid.Row="1" x:Name="ListBox" ItemsSource="{Binding SpriteAssetInfos}" DisplayMemberPath="Name" SelectionChanged="OnSelectionChanged"
                 MouseDoubleClick="ListBox_OnMouseDoubleClick"/>
    </Grid>
</UserControl>
