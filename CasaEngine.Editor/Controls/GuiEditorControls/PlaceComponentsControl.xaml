<UserControl x:Class="CasaEngine.Editor.Controls.GuiEditorControls.PlaceComponentsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CasaEngine.Editor.Controls.GuiEditorControls"
             xmlns:dragAndDrop="clr-namespace:CasaEngine.Editor.DragAndDrop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer CanContentScroll="True" SnapsToDevicePixels="True" HorizontalScrollBarVisibility="Visible" 
                  PanningMode="VerticalFirst" DataContext="{Binding}">

        <StackPanel Name="stackPanel" CanVerticallyScroll="True" ForceCursor="False" SnapsToDevicePixels="True" OverridesDefaultStyle="True">
            <TextBlock Text="Please Drag and Drop" Foreground="DimGray"/>
        </StackPanel>

    </ScrollViewer>

</UserControl>
