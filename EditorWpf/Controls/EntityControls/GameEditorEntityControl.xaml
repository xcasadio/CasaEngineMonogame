<UserControl x:Class="EditorWpf.Controls.EntityControls.GameEditorEntityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:worldControls="clr-namespace:EditorWpf.Controls.WorldControls"
             xmlns:entityControls="clr-namespace:EditorWpf.Controls.EntityControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" VerticalContentAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button ToolTip="Save" Click="ButtonSave_OnClick">
                    <Image Source="/Resources/save-44-48.png" Height="16" />
                </Button>
                <Separator />
            </ToolBar>
        </ToolBarTray>
        <entityControls:GameEditorEntity Grid.Row="1" x:Name="gameEntityEditor" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
