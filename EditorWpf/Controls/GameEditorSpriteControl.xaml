<UserControl x:Class="EditorWpf.Controls.GameEditorSpriteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <TextBlock Text="Zoom" VerticalAlignment="Center"/>
                <ComboBox>
                    <ComboBoxItem Content="x1" IsSelected="true"/>
                    <ComboBoxItem Content="x2"/>
                    <ComboBoxItem Content="x4"/>
                    <ComboBoxItem Content="x8"/>
                </ComboBox>
                <Separator />
            </ToolBar>
        </ToolBarTray>
        <local:GameEditorWorld Grid.Row="1" x:Name="gameEditor" AllowDrop="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
