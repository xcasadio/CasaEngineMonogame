<UserControl x:Class="EditorWpf.Controls.PropertyGridTypeEditor.PointTypeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorWpf.Controls.PropertyGridTypeEditor"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="X" VerticalAlignment="Center"/>
        <xctk:IntegerUpDown Grid.Column="1" Value="{Binding X, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=local:PointTypeEditorControl}}" Minimum="0" ValueChanged="OnXChanged"/>
        <TextBlock Grid.Column="2" Text="Y" VerticalAlignment="Center"/>
        <xctk:IntegerUpDown Grid.Column="3" Value="{Binding Y, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=local:PointTypeEditorControl}}" Minimum="0" ValueChanged="OnYChanged"/>
    </Grid>
</UserControl>
