<UserControl x:Class="EditorWpf.Controls.WorldControls.PlaceActorsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dragAndDrop="clr-namespace:EditorWpf.DragAndDrop"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <StackPanel>
        <TextBlock Text="Please Drag and Drop" Foreground="DimGray"/>
        <Label Content="Entity" MouseMove="OnMouseMove" Cursor="Hand"  Tag="{x:Static dragAndDrop:DragAndDropInfoType.Entity}"/>
        <!--Label Content="Point Light" Cursor="Hand" /-->
        <Label Content="Player Start" MouseMove="OnMouseMove" Cursor="Hand" Tag="{x:Static dragAndDrop:DragAndDropInfoType.PlayerStart}"/>
    </StackPanel>
</UserControl>
