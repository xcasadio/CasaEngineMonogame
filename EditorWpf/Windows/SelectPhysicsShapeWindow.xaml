<Window x:Class="EditorWpf.Windows.SelectPhysicsShapeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Physics Shape" Height="200" Width="300">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Click="ButtonBox_Click">Box</Button>
            <Button Click="ButtonSphere_Click">Sphere</Button>
            <Button Click="ButtonCylinder_Click">Cylinder</Button>
            <Button Click="ButtonCapsule_Click">Capsule</Button>
            <Button Click="ButtonCompound_Click">Compound</Button>
        </StackPanel>

        <Button Grid.Row="2" Click="ButtonCancel_Click" HorizontalAlignment="Right" Width="100">Cancel</Button>
    </Grid>
</Window>
